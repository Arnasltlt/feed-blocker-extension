{
  "manifest_version": 3,
  "name": "Feed Blocker - YouTube Home",
  "description": "Removes the YouTube home page recommendation feed.",
  "version": "0.1.0",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.linkedin.com/*",
    "https://x.com/*",
    "https://twitter.com/*",
    "https://feed-blocking-extenstion.fly.dev/*",
    "http://127.0.0.1:11400/*",
    "http://localhost:11400/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": ["local-ai.js", "youtube-home-blocker.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": ["linkedin-feed-blocker.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["x-feed-blocker.js"],
      "run_at": "document_idle"
    }
  ]
}
